<div class="modal fade" id="registerModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Register</h4>
      </div>
      <div class="modal-body">

        <%= form_for :user , class: 'form' do |f| %>

          <div class="form-group" >
            <%= label( f , :nickname ) %><br>
            <%= text_field( f , :nickname , class: 'form-control' , placeholder: "Your nickname" , name: "nickname" ) %>
          </div>

          <div class="form-group" >
            <%= label( f , :email ) %><br>
            <%= text_field( f , :email , class: 'form-control' , placeholder: "Your email"  , name: "email" ) %>
          </div>

          <div class="form-group" >
            <%= label( f , :password_field ) %><br>
            <%= password_field( f , :password , class: 'form-control' , placeholder: "Your password"  , name: "password" ) %>
          </div>

          <div class="form-group" >
            <%= label( f , :password_confirmation , "Password Confirmation" ) %><br>
            <%= password_field( f , :password_confirmation , class: 'form-control' , placeholder: "Your Confirmation" , name: "password_confirmation" ) %>
          </div>  

        <% end %>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" onclick="register( $('#registerForm')[0] );" >Register</button>
      </div>
    </div>
  </div>
</div>