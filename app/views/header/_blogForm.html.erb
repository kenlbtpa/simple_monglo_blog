<div class="modal fade" id="blogModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Create Blog</h4>
      </div>
      <div class="modal-body">      

        <%= form_for :blog , method: "post" , url: "blog/create" , html: { id: "blogForm" , class: 'form' } do |f| %>

          <div class="ajaxErrors">
          </div>

          <div class="form-group" >
            <%= label( f , :title ) %><br>
            <%= text_field( f , :title , class: 'form-control' , placeholder: "Title of your blog" , name: "title" ) %>
          </div>

          <div class="form-group" >
            <%= label( f , :content ) %><br>
            <%= text_area( f , :content , class: 'form-control' , placeholder: "Your content" , name: "content" ) %>
          </div>

        <% end %>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" onclick="login( $('#loginForm')[0] );">Create</button>
      </div>
    </div>
  </div>
</div>